<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>

  <%- include('partials/header.ejs') %>

    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <div class="list-group list-group-radio d-grid gap-2 border-0">
      
          <% var count=0; itemsinDB.forEach(item => {%>
          <form action="/delete" method="post">
            <div class="position-relative">             
              <input onchange="this.form.submit()" class="form-check-input position-absolute top-50 end-0 me-3 fs-5" type="checkbox" name="checkbox" id="listGroupRadioGrid<% count++ %>" value="<%= item._id %>">
              <label class="list-group-item py-3 pe-5" for="listGroupRadioGrid1">
                <strong class="fw-semibold">Task #<%= count %></strong>
                <span class="d-block small opacity-75"><%= item.name %></span>
              </label>           
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
          </form>
          <%}); %>
          
           
        </div>
      </div>

     
  <div class="container">
    <form action="/" method="POST">
      <div class="d-flex justify-content-center">
    
          <input class="form-control w-50" type="text" placeholder="New Task" name="newTask">
          <input class="btn btn-primary" type="submit" value="<%= listTitle %>" name="list">
    
      </div>
    </form>
  </div>

    <%- include('partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>