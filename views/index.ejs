<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>

  <%- include('partials/header.ejs') %>

    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <div class="list-group list-group-radio d-grid gap-2 border-0">
      
          <% for( let i = 0; i < taskList; i++ ) { %>
          
            <div class="position-relative">
              <input class="form-check-input position-absolute top-50 end-0 me-3 fs-5" type="checkbox" name="listGroupRadioGrid" id="listGroupRadioGrid<% i %>" value="" unchecked="">
              <label class="list-group-item py-3 pe-5" for="listGroupRadioGrid1">
                <strong class="fw-semibold">Task #<%= i+1 %></strong>
                <span class="d-block small opacity-75"><%= taskPrompt[i] %></span>
              </label>
            </div>
      
          <% } %>
           
        </div>
      </div>
      <% function checkFlag() {
        var page="";
        if (locals.flagWork) {
            page= "/work";
        }else{
            page= "/";
        }
        return page;
    } %>
     
      <div class="container">
    <form action=<%= checkFlag(); %> method="POST">
      <div class="d-flex justify-content-center">
    
          <input class="form-control w-50" type="text" placeholder="New Task" name="newTask">
          <input class="btn btn-primary" type="submit" value="Post new task">
    
      </div>
    </form>
  </div>

    <%- include('partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>